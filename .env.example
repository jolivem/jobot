APP_ENV=production
APP_NAME=Jobot API
LOG_LEVEL=INFO

# Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(48))"
JWT_SECRET=CHANGE_ME_generate_a_random_secret
JWT_ALG=HS256
ACCESS_TOKEN_MINUTES=15
REFRESH_TOKEN_DAYS=14
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=CHANGE_ME_generate_a_fernet_key

# MariaDB (hostnames are Docker service names)
DB_HOST=mariadb
DB_PORT=3306
DB_USER=jobot
DB_PASSWORD=CHANGE_ME_strong_password
DB_NAME=jobot

# Redis
REDIS_URL=redis://redis:6379/0

# CORS - Caddy reverse proxy means same origin, use your Pi's IP on port 80
# Example: http://192.168.1.50
CORS_ORIGINS=["http://192.168.1.x"]

# Binance
BINANCE_BASE_URL=https://api.binance.com
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here
BINANCE_LIVE_TRADING=false
